{
  "name": "envyron",
  "type": "module",
  "private": true,
  "version": "0.1.0",
  "packageManager": "bun@1.2.22",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:web": "bun run turbo dev --filter @envyron/web",
    "db:dev:up": "bun run --cwd packages/db db:dev:up",
    "db:dev:down": "bun run --cwd packages/db db:dev:down",
    "db:generate": "bun run --cwd packages/db db:generate",
    "db:migrate": "bun run --cwd packages/db db:migrate",
    "db:studio": "bun run --cwd packages/db db:studio",
    "build": "turbo run build",
    "lint": "biome lint --write",
    "format": "biome format --write"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "turbo": "^2.5.8"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
